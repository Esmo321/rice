#!/bin/bash

#-Generates a MD file with all the doc comments from the files
#-in ~/.local/bin folder
#-A doc comment is a line beggining with `#-`

SCRIPTS="$HOME/.local/bin/"
#DOC=".docs"

for s in $(ls $SCRIPTS)
do
	script="$SCRIPTS/$s"
	comments=$(grep "^#-" $script | sed "s/^#-//g" | sed "s/'/\`/g" )
	printf "### %s\n%s\n\n" "$s" "$comments"
done

